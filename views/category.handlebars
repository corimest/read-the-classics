    <div class="pt-5 text-center text-secondary font-weight-bold">
        <h2>Featured Books</h2>
    </div>
    <div class="row justify-content-center">
        {{#each books as |book|}}
        {{> book-info book }}
        {{/each}}
    </div>
</div>