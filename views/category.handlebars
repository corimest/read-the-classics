<div class="pt-5 pb-5 text-center" style="font-family: 'Courier New', Courier, monospace">
    <h2>Books</h2>
</div>
<div class="container-fluid row  d-flex justify-content-center" style="background-color:rgb(177, 222, 220); border-radius: 10px; padding-top: 30px; padding-bottom: 30px; margin: 0px;">
    <div class="col-2 text-center" style="border-radius:10px">
        <a href="/books">
            <h3 class="btn" style="background: rgb(254, 155, 169); font-family: 'Courier New', Courier, monospace">ALL BOOKS</h3>
        </a>
    </div>
    <div class="col-2 text-center">
        <a href="/books/category/Fiction">
            <span class="icon">
                <i class="flaticon-fiction"></i>
            </span>
            <h3 class="btn" style="background: rgb(254, 155, 169); font-family: 'Courier New', Courier, monospace">FICTION</h3>
        </a>
    </div>
    <div class="col-2 text-center">
        <a href="/books/category/Nonfiction">
            <span class="icon">
                <i class="flaticon-fiction"></i>
            </span>
            <h3 class="btn" style="background: rgb(254, 155, 169); font-family: 'Courier New', Courier, monospace">NONFICTION</h3>
        </a>
    </div>
    <div class="col-2 text-center">
        <a href="/books/category/Drama">
            <span class="icon">
                <i class="flaticon-boiled"></i>
            </span>
            <h3 class="btn" style="background: rgb(254, 155, 169); font-family: 'Courier New', Courier, monospace">DRAMA</h3>
        </a>
    </div>
    <div class="col-2 text-center">
        <a href="/books/category/Poetry">
            <span class="icon">
                <i class="flaticon-piece-of-cake"></i>
            </span>
            <h3 class="btn" style="background: rgb(254, 155, 169); font-family: 'Courier New', Courier, monospace">POETRY</h3>
        </a>
    </div>
    <div class="col-2 text-center">
        <a href="/books/category/Folklore">
            <span class="icon">
                <i class="flaticon-piece-of-cake"></i>
            </span>
            <h3 class="btn" style="background: rgb(254, 155, 169); font-family: 'Courier New', Courier, monospace">FOLKLORE</h3>
        </a>
    </div>
</div>

<div class="container">
    <div class="pt-5 text-center text-secondary font-weight-bold" style="font-family: 'Courier New', Courier, monospace">
        <h2>Featured Books</h2>
    </div>
    <div class="row justify-content-around">
        {{#each books as |book|}}
        {{> book-info book }}
        {{/each}}
    </div>
</div>