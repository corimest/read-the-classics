<div id="fh5co-product">
    <div class="container">
        <div class="row animate-box">
            <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                <h2>Books</h2>
            </div>

        </div>

        <div class="row">
            <div class="fh5co-tabs animate-box">
                <!-- Tabs -->
                <ul class="fh5co-tab-nav">
                    <li><a href="/books">View All</a></li>
                    <li><a href="/books/category/Fiction">Fiction</a></li>
                    <li><a href="/books/category/Nonfiction">Nonfiction</a></li>
                    <li><a href="/books/category/Drama">Drama</a></li>
                    <li><a href="/books/category/Poetry">Poetry</a></li>
                    <li><a href="/books/category/Folklore">Folklore</a></li>
                </ul>

                <!-- Tabs Content -->
                <div class="row">

                    <div class="tab-content">
                        <div class="row">
                            {{#each books as |book|}}
                            {{> book-info book }}
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>