    <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
    <div id="page">
        <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-around">
            <a class="navbar-brand mb-0 h1" href="/">Read The Classics</a>

            <!-- Example split success button -->
            <div class="justify-content-around">
                <div class="btn-group">
                    <button type="button" class="btn btn-success"><a href="/books"
                            class="text-decoration-none text-light">Books</a></button>
                    <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split"
                        data-bs-toggle="dropdown" aria-expanded="false">
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/books/category/Fiction">Fiction</a></li>
                        <li><a class="dropdown-item" href="/books/category/Nonfiction">Nonfiction</a></li>
                        <li><a class="dropdown-item" href="/books/category/Drama">Drama</a></li>
                        <li><a class="dropdown-item" href="/books/category/Poetry">Poetry</a></li>
                        <li><a class="dropdown-item" href="/books/category/Folklore">Folklore</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="/books">View All</a></li></button>
                    </ul>
                </div>
                {{#if loggedIn}}
                <button class="btn btn-success "><a href="/dashboard"
                        class="text-decoration-none text-light">MyBooks</button>
                <button class="btn btn-success "><a id="logout">Logout</a></button>
                {{else}}
                <button class="btn btn-success"><a href="/login"
                        class="text-decoration-none text-light">Login</a></button>
                {{/if}}
            </div>
        </nav>

        <main>
            {{{body}}}
        </main>

        <footer id="fh5co-footer" role="contentinfo">
            <div class="container">
                <div class="row copyright">
                    <div class="col-md-12 text-center">
                        <p>
                            <small class="block">Classics with Cats &copy;
                                <script>document.write(new Date().getFullYear());</script> All Rights
                                Reserved.
                            </small>
                            <small class="block">Designed &amp; developed by <a href="https://github.com/zwind66"
                                    target="_blank">Shuai
                                    Zuo</a> &amp; <a href="https://github.com/corimest" target="_blank">Corinne
                                    Corinne</a></small>
                        </p>
                    </div>
                </div>
                <!-- sleeping orange cat HTML -->
                <div class="container-sleepy">
                    <div class="sleepy-body">
                        <div class="stripe1"></div>
                        <div class="stripe2"></div>
                        <div class="stripe3"></div>
                    </div>
                    <div class="sleepy-head">
                        <div class="sleepy-i1">
                            <div class="sleepy-p1"></div>
                        </div>
                        <div class="sleepy-i2">
                            <div class="sleepy-p2"></div>
                        </div>
                        <div class="sleepy-nose"></div>
                    </div>
                    <div class="sleepy-e1"></div>
                    <div class="sleepy-e2"></div>
                    <div class="sleepy-l1"></div>
                    <div class="sleepy-l2"></div>
                    <div class="sleepy-tail"></div>
                </div>
            </div>
        </footer>
    </div>

    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="icon-arrow-up"></i></a>
    </div>

    {{#if loggedIn}}
    <script src="/javascript/logout.js"></script>
    {{/if}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
