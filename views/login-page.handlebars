<div id="fh5co-product">
    <div class="container">
        <div class="row animate-box">
            <div class="col-md-6 fh5co-heading">
                <h2>Login</h2>

                <form class="login-form">
                    <div class="row form-group">
                        <div class="col-md-10">
                            <label for="username" class="sr-only">User Name</label>
                            <input type="text" class="form-control" id="username-login" placeholder="User name">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-10">
                            <label for="password" class="sr-only">Password</label>
                            <input type="password" class="form-control" id="password-login" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary">

                    </div>
                </form>
            </div>

            <div class="col-md-6 fh5co-heading">

                <h2>Sign Up</h2>
                <h4>If it's your first time here, please sign up.</h4>
                <form class="signup-form">
                    <div class="row form-group">
                        <div class="col-md-10">
                            <label for="username" class="sr-only">User Name</label>
                            <input type="text" class="form-control" id="username-signup" placeholder="User name">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-10">
                            <label for="password" class="sr-only">Password</label>
                            <input type="password" class="form-control" id="password-signup" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Sign Up" class="btn btn-primary">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>